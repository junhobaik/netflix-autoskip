{
    "name": "Netflix AutoSkip: Skip Intro & Next Episode",
    "short_name": "Netflix AutoSkip",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Netflix Auto skip Intro & Auto play Next episode.",
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "*://*.netflix.com/*",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "*://*.netflix.com/*"
        ],
        "js": [
            "js/watch.js"
        ]
    }]
}