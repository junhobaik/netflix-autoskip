{
    "name": "Netflix AutoSkip: Skip Intro & Next Episode",
    "short_name": "Netflix AutoSkip",
    "version": "0.4",
    "manifest_version": 2,
    "description": "Netflix Auto skip Intro & Auto play Next episode.",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "*://*.netflix.com/*",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "*://*.netflix.com/*"
        ],
        "js": [
            "js/watch.js"
        ]
    }],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}